extends layout.pug

block content 
  nav.grid-container.portfolio-breadcrumb
    a(href='/') â† Back
  article.grid-container.portfolio-intro.portfolio-project
    .grid-x
      .cell.small-6.medium-9.large-9

        //- Project name
        h1 #{data.projects[id].project_name}

        //- project description.
        p.lead.text-light
          | #{data.projects[id].description}

      .cell.portfolio-meta.small-6.medium-2.large-3
        h6 Technologies

        //- tech used
        ul
          each val, index in data.projects[id].technologies
            li #{val} 

        //- Use template literals and interpolation to add URLs to the hrefs below so they link to the repo and the live version of each project.
        a.button.expanded(href=`${data.projects[id].live_link}` target='_blank') Live Demo
        a.button.expanded(href=`${data.projects[id].github_link}` target='_blank') GitHub Repo

    each val, index in data.projects[id].image_urls 
      if index >= 1    
        img.image(src=`${val}`)